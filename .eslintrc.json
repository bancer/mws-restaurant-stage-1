{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "array-element-newline": ["error",  "always"],
    "camelcase": "error",
    "curly": "error",
    "func-style": ["error", "declaration", { "allowArrowFunctions": true }],
    "guard-for-in": "error",
    "indent": ["error", 2],
    "no-array-constructor": "error",
    "no-console": "warn",
    "no-extra-parens": "error",
    "no-multi-str": "error",
    "no-new-object": "error",
    "no-new-wrappers": "error",
    "no-trailing-spaces": "error",
    "no-unused-vars": ["error", {
      "args": "none",
      "vars": "local",
      "varsIgnorePattern": "cuisines|DBHelper|markers|map|neighborhoods|restaurant"
    }],
    "no-var": "error",
    "object-curly-newline": ["error", { "multiline": true }],
    "quotes": ["error", "single"],
    "semi": "error",
    "valid-jsdoc": "error"
  },
  "globals": {
    "DBHelper": true,
    "google": false,
    "idb": true,
    "initMap": true,
    "map": true,
    "restaurant": true
  }
}
